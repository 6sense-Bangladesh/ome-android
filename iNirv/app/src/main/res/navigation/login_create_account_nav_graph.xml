<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/welcomeFragment">
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.Welcome.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_createAccountNameFragment"
            app:destination="@id/createAccountNameFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.LoginFlow.Login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_forgotFragment"
            app:destination="@id/placeholder5" />
<!--        <action-->
<!--            android:id="@+id/action_loginFragment_to_app_level_nav_graph"-->
<!--            app:destination="@id/app_level_nav_graph"-->
<!--            app:popUpTo="@navigation/app_level_nav_graph"-->
<!--            app:popUpToInclusive="true" />-->
        <action
            android:id="@+id/action_loginFragment_to_caConfirmFragment"
            app:destination="@id/caConfirmFragment" />
<!--        <action-->
<!--            android:id="@+id/action_loginFragment_to_stove_tab_nav_graph"-->
<!--            app:destination="@id/stove_tab_nav_graph"-->
<!--            app:popUpTo="@navigation/app_level_nav_graph"-->
<!--            app:popUpToInclusive="true"/>-->
    </fragment>
    <fragment
        android:id="@+id/createAccountNameFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.CreateAccountFlow.CAName.ui.CreateAccountNameFragment"
        android:label="CreateAccountNameFragment" >
        <action
            android:id="@+id/action_createAccountNameFragment_to_placeholder6"
            app:destination="@id/CAContactFragment" />
    </fragment>
    <fragment android:id="@+id/placeholder5" />
    <fragment
        android:id="@+id/CAContactFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.CreateAccountFlow.CAContact.CAContactFragment"
        tools:layout="@layout/fragment_ca_contact">
        <action
            android:id="@+id/action_placeholder6_to_placeholder7"
            app:destination="@id/caPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/caPasswordFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.CreateAccountFlow.CAPassword.CAPasswordFragment"
        tools:layout="@layout/fragment_ca_password">
        <action
            android:id="@+id/action_placeholder7_to_placeholder8"
            app:destination="@id/caConfirmFragment" />
    </fragment>
    <fragment
        android:id="@+id/caConfirmFragment"
        android:name="com.example.inirv.LoginAndCreateAccount.CreateAccountFlow.CAConfirm.CAConfirmFragment"
        tools:layout="@layout/fragment_ca_confirm">
        <action
            android:id="@+id/action_placeholder8_to_placeholder9"
            app:destination="@id/placeholder9" />
    </fragment>
    <fragment android:id="@+id/placeholder9" >
    </fragment>
    <action android:id="@+id/action_global_caPasswordFragment"
        app:destination="@id/caPasswordFragment" />
<!--    <include app:graph="@navigation/app_level_nav_graph" />-->
</navigation>