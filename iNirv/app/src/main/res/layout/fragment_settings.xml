        <TableRow android:id="@+id/settings_fragment_table_row_add_new_knob"
            android:layout_width="match_parent">

            <RelativeLayout android:layout_width="match_parent">

                <TextView
                    android:id="@+id/settings_fragment_table_row_add_new_knob_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Knob" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/settings_fragment_table_row_add_new_knob_text_view"
                    android:layout_alignBottom="@id/settings_fragment_table_row_add_new_knob_text_view"
                    android:layout_toEndOf="@id/settings_fragment_table_row_add_new_knob_text_view"
                    android:rotationY="180"
                    android:src="@drawable/ic_drop_down_arrow" />
            </RelativeLayout>

        </TableRow>

        <TableRow android:id="@+id/settings_fragment_table_row_setup_family">

            <RelativeLayout>

                <TextView
                    android:id="@+id/settings_fragment_table_row_setup_new_family_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Setup Family (Coming Soon)" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/settings_fragment_table_row_setup_new_family_text_view"
                    android:layout_alignBottom="@id/settings_fragment_table_row_setup_new_family_text_view"
                    android:layout_toEndOf="@id/settings_fragment_table_row_setup_new_family_text_view"
                    android:rotationY="180"
                    android:src="@drawable/ic_drop_down_arrow" />
            </RelativeLayout>

        </TableRow>

        <TableRow android:id="@+id/settings_fragment_table_row_auto_shut_off">

            <RelativeLayout>


                <TextView
                    android:id="@+id/settings_fragment_table_row_auto_shut_off_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auto Shut-Off Settings" />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/settings_fragment_table_row_auto_shut_off_text_view"
                    android:layout_toEndOf="@id/settings_fragment_table_row_auto_shut_off_text_view"
                    android:layout_alignBottom="@id/settings_fragment_table_row_auto_shut_off_text_view"
                    android:src="@drawable/ic_drop_down_arrow"
                    android:rotationY="180"
                    />
            </RelativeLayout>
        </TableRow>

    </TableLayout>

