<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.Profile.ProfileFragment">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/profile_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <ImageButton
                    android:id="@+id/profile_fragment_contact_support_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@color/appBlueColor"
                    android:src="@drawable/ic_menu" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="My Profile" />

                <ImageButton
                    android:id="@+id/profile_fragment_logout_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="@color/appBlueColor"
                    android:src="@drawable/ic_menu" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:background="@color/appBlueColor"
        app:layout_constraintDimensionRatio="72:71"
        app:layout_constraintTop_toBottomOf="@id/profile_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/profile_fragment_name_label"
        android:layout_width="331dp"
        android:layout_height="29dp"
        android:text="NameLabel"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_picture" />

    <TextView
        android:id="@+id/profile_fragment_first_name_label"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:text="First Name"
        app:layout_constraintStart_toStartOf="@id/profile_fragment_name_label"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_name_label"
        />

    <EditText
        android:id="@+id/profile_fragment_first_name_edit_text"
        android:layout_width="331dp"
        android:layout_height="44.5dp"
        android:hint="First Name"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_first_name_label"
        />

    <TextView
        android:id="@+id/profile_fragment_last_name_label"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:text="Last Name"
        app:layout_constraintStart_toStartOf="@id/profile_fragment_name_label"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_first_name_edit_text"
        />

    <EditText
        android:id="@+id/profile_fragment_last_name_edit_text"
        android:layout_width="331dp"
        android:layout_height="44.5dp"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_last_name_label"
        />

    <TextView
        android:id="@+id/profile_fragment_email_label"
        android:layout_width="75dp"
        android:layout_height="21dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@id/profile_fragment_name_label"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_last_name_edit_text"
        />

    <TextView
        android:id="@+id/profile_fragment_actual_email_label"
        android:layout_width="331dp"
        android:layout_height="44.5dp"
        android:text="Email Address"
        android:textColor="@color/appBlueColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_email_label"
        />

    <TableLayout
        android:id="@+id/profile_fragment_table_layout"
        android:layout_width="331dp"
        android:layout_height="123.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_fragment_actual_email_label">

        <TableRow
            android:id="@+id/profile_fragment_table_row_change_password"
            >
            <TextView
                android:text="Change Password"
                />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>