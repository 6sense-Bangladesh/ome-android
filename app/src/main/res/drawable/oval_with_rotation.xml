<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the oval shape -->
    <item>
        <rotate
            android:fromDegrees="16.84"
            android:pivotX="-130%"
            android:pivotY="50%">
            <shape android:shape="oval">
                <size
                    android:width="7460dp"
                    android:height="6630dp" />
                <solid android:color="#FFFFFF" /> <!-- Replace with your desired color -->
            </shape>
        </rotate>
    </item>

</layer-list>
