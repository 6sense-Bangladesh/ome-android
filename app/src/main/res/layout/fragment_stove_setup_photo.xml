<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <TextView
        android:id="@+id/label1"
        style="@style/Label.17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/take_a_shalf_photo_desc1"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/shaftIv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_stove_shaft"
        app:layout_constraintTop_toBottomOf="@+id/label1" />

    <TextView
        android:id="@+id/label2"
        style="@style/Label.17sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/take_a_shalf_photo_desc2"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/shaftIv" />

    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
        android:id="@+id/takeAphoto"
        style="@style/OmeButton.Gradient.WithLoadingState"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="48dp"
        android:layout_marginTop="64dp"
        android:text="@string/take_photo"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label2" />


</androidx.constraintlayout.widget.ConstraintLayout>
