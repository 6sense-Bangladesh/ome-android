<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.dashboard.mystove.MyStoveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/flexbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexWrap="wrap"
            app:justifyContent="space_around"
            app:layout_constraintBottom_toTopOf="@id/continueTurnOff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob2"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <FrameLayout
                android:id="@+id/knob1centerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.ome.app.ui.views.KnobView
                    android:id="@+id/knob1center"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/knob2centerView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible">

                <com.ome.app.ui.views.KnobView
                    android:id="@+id/knob2center"
                    android:layout_width="@dimen/_130sdp"
                    android:layout_height="@dimen/_130sdp"
                    android:layout_gravity="center" />
            </FrameLayout>

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob3"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob4"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob5"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.ome.app.ui.views.KnobView
                android:id="@+id/knob6"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:visibility="gone"
                tools:visibility="visible" />


        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/continueTurnOff"
            style="@style/OmeButton.Blue"
            android:layout_width="wrap_content"
            android:text="Turn Off"
            app:backgroundTint="@color/core_red"
            app:icon="@drawable/ic_power"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
