<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".presentation.signup.welcome.WelcomeFragment">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iconDone"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_36sdp"
        android:layout_margin="@dimen/_12sdp"
        android:background="@color/colorPrimary"
        android:src="@drawable/ic_done_small"
        app:layout_constraintBottom_toTopOf="@+id/congoUser"
        app:layout_constraintEnd_toEndOf="@+id/congoUser"
        app:layout_constraintStart_toStartOf="@+id/congoUser"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Round.18" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/congoUser"
        style="@style/Title.Large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_horizontal"
        android:layout_marginEnd="@dimen/margin_horizontal"
        android:layout_marginBottom="@dimen/_48sdp"
        android:gravity="center"
        tools:text="@string/congoUser"
        app:layout_constraintBottom_toTopOf="@+id/materialTextView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/materialTextView4"
        style="@style/Title.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_horizontal"
        android:gravity="center"
        android:text="@string/start_setting_up_stove"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/Label.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_horizontal"
        android:gravity="center"
        android:text="@string/set_up_your_stove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialTextView4" />

<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:id="@+id/skipSetup"-->
<!--        style="@style/OmeButton.Blue.Outline"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Skip for Now"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/startSetup"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent" />-->

    <com.apachat.loadingbutton.core.customViews.CircularProgressButton
        android:id="@+id/startSetup"
        style="@style/OmeButton.Blue"
        android:fitsSystemWindows="true"
        android:text="@string/start_set_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
