        <!--            app:layout_constraintStart_toStartOf="@+id/omeTextInput2"-->
        <!--            app:layout_constraintTop_toBottomOf="@+id/omeTextInput2"-->
        <!--            app:size="16sp" />-->





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
