<resources>

    <style name="OmeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">.01</item>
    </style>

    <style name="ProfileEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@drawable/ome_input_cursor_drawable</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#00000000</item>
        <item name="android:letterSpacing">.01</item>
    </style>


    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">.01</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">.01</item>
    </style>

    <style name="Title.ExtraLarge">
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="Title.Large">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="Title.Medium">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Title.Small">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Title.20sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Title.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Title.14sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Menu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="Label.Large">
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="Label.Medium">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Label.Small">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/read_message_color</item>
    </style>

    <style name="Label.20sp">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Label.19sp">
        <item name="android:textSize">19sp</item>
    </style>

    <style name="Label.17sp">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="Label.18sp">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Label.16sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Label.12sp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Label.10sp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Label.14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Label.23sp">
        <item name="android:textSize">23sp</item>
    </style>

    <style name="Label.30sp">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="OmeButton.Gradient">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ome_gradient_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OmeButton.Gradient.WithLoadingState">
        <item name="spinning_bar_color">@color/white</item>
        <item name="spinning_bar_padding">5dp</item>
        <item name="spinning_bar_width">3dp</item>
        <item name="android:background">@drawable/ome_gradient_button_unpressed_color</item>
    </style>

    <style name="OmeButton.Blue" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>

        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OmeButton.Blue.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textAllCaps">false</item>

        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OmeButton.LightBlue">
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/ome_light_blue_button_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="OmeButton.White">

        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@drawable/ome_white_button_color_selector</item>
    </style>

    <style name="OmeButton.TransparentPurpleBorders">
        <item name="android:background">@drawable/ome_purple_borders_button</item>
        <item name="android:textColor">@drawable/ome_transparent_button_with_borders_selector</item>
    </style>


    <style name="OmeButton.White.WithLoadingState">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RectRound</item>
        <item name="spinning_bar_color">@color/button_color_white_background</item>
        <item name="spinning_bar_padding">5dp</item>
        <item name="spinning_bar_width">3dp</item>
        <item name="android:background">@drawable/ome_button_corners_shape</item>
    </style>

    <style name="OmeButton.TransparentBackground">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.RectRound</item>
        <item name="android:background">@drawable/ome_transparent_background_button</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@drawable/ome_white_transparent_button_color_selector</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="ShapeAppearanceOverlay.RectRound" parent="">
        <item name="cornerSize">10dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round18" parent="">
        <item name="cornerSize">@dimen/_18sdp</item>
    </style>
</resources>
