<resources>

    <style name="OmeButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">.01</item>
    </style>


    <style name="Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">.01</item>
        <item name="android:textColor">?colorControlNormal</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorControlNormal</item>
        <item name="android:letterSpacing">.01</item>
    </style>

    <style name="Title.ExtraLarge">
        <item name="android:textSize">@dimen/_30ssp</item>
    </style>

    <style name="Title.Large">
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="Title.MediumExtra">
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="Title.Medium">
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="Title.Small">
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>

    <style name="Title.Mini">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="Title.MiniExtra">
        <item name="android:textSize">@dimen/_8ssp</item>
    </style>

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Title.Small</item>
        <item name="buttonGravity">center_vertical</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:paddingStart">@dimen/actionBarPaddingHorizontal</item>
        <item name="android:paddingEnd">@dimen/actionBarPaddingHorizontal</item>
    </style>

    <style name="AppTheme.CustomMenuPopup" parent="Widget.Material3.PopupMenu">
        <item name="android:backgroundTint">@color/white</item>
        <item name="horizontalOffset">@dimen/_16sdp</item>
    </style>



    <style name="Label.LargeExtra">
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="Label.Large">
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="Label.Medium">
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="Label.Small">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:textColor">@color/read_message_color</item>
    </style>

    <style name="Label.Mini">
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColor">@color/read_message_color</item>
    </style>
    <style name="Label.MiniExtra">
        <item name="android:textSize">@dimen/_6ssp</item>
        <item name="android:textColor">@color/read_message_color</item>
    </style>

    <style name="OmeButton.Blue">
        <item name="android:layout_height">@dimen/_24sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_horizontal</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/btn_ripple</item>
        <item name="android:textColor">@color/white</item>
        <item name="spinning_bar_color">@color/white</item>
    </style>

    <style name="OmeButton.Blue.Outline">
        <item name="android:background">@drawable/btn_ripple_outline</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.RectRound" parent="">
        <item name="cornerSize">14dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round" parent="">
        <item name="cornerSize">@dimen/_30sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round.18" parent="">
        <item name="cornerSize">@dimen/_18sdp</item>
    </style>

    <style name="ShapeAppearanceOverlay.Round.20" parent="">
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>
</resources>
