<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboardingNavGraph"
    tools:ignore="InvalidNavigation">

    <include app:graph="@navigation/my_stove_nav_graph"/>
    <include app:graph="@navigation/add_knob_nav_graph"/>

    <fragment
        android:id="@+id/launchFragment"
        android:name="com.ome.app.ui.launch.LaunchFragment"
        android:label="ome_background_gradient"
        tools:layout="@layout/fragment_launch">
        <action
            android:id="@+id/action_welcomeFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_welcomeFragment_to_signUpNameFragment"
            app:destination="@id/signUpNameFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.ome.app.ui.signin.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signInFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signInFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpToInclusive="true"
            app:launchSingleTop="true"
            app:popUpTo="@+id/onboardingNavGraph" />
    </fragment>
    <fragment
        android:id="@+id/signUpNameFragment"
        android:name="com.ome.app.ui.signup.name.SignUpNameFragment"
        android:label="SignUpNameFragment">
        <action
            android:id="@+id/action_signUpNameFragment_to_signUpEmailAndPasswordFragment"
            app:destination="@id/signUpEmailAndPhoneFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/signUpEmailAndPhoneFragment"
        android:name="com.ome.app.ui.signup.email.SignUpEmailAndPhoneFragment"
        android:label="SignUpEmailAndPasswordFragment">
        <action
            android:id="@+id/action_signUpEmailAndPhoneFragment_to_signUpPasswordFragment"
            app:destination="@id/signUpPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.signup.email.NameParams" />
    </fragment>
    <fragment
        android:id="@+id/signUpPasswordFragment"
        android:name="com.ome.app.ui.signup.password.SignUpPasswordFragment"
        android:label="SignUpPasswordFragment">
        <action
            android:id="@+id/action_signUpPasswordFragment_to_signUpConfirmationFragment"
            app:destination="@id/signUpConfirmationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.signup.password.AuthParams" />
    </fragment>
    <fragment
        android:id="@+id/signUpConfirmationFragment"
        android:name="com.ome.app.ui.signup.confirmation.SignUpConfirmationFragment"
        android:label="SignUpConfirmationFragment">
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.signup.password.AuthParams" />
        <action
            android:id="@+id/action_signUpConfirmationFragment_to_signUpPasswordFragment"
            app:destination="@id/signUpPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_signUpConfirmationFragment_to_dashboardFragment"
            app:destination="@id/dashboardFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/onboardingNavGraph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="com.ome.app.ui.signin.forgotpassword.ForgotPasswordFragment"
        android:label="ForgotPasswordFragment">
        <action
            android:id="@+id/action_forgotPasswordFragment_to_signUpConfirmationFragment"
            app:destination="@id/signUpConfirmationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.signup.password.AuthParams" />
    </fragment>
    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.ome.app.ui.dashboard.DashboardFragment"
        android:label="DashboardFragment"
        tools:layout="@layout/fragment_dashboard">

        <argument android:name="nav_arg" app:argType="string" />
        <deepLink app:uri="ome://navigation/dashboard/{nav_arg}" />

        <action
            android:id="@+id/action_dashboardFragment_to_launchFragment"
            app:destination="@id/launchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@+id/onboardingNavGraph"
            app:popUpToInclusive="true" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_dashboardFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_dashboardFragment_to_addKnobNavGraph"
            app:destination="@id/addKnobNavGraph" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_dashboardFragment_to_autoShutOffSettingsFragment"
            app:destination="@id/autoShutOffSettingsFragment" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_dashboardFragment_to_deviceSettingsFragment"
            app:destination="@id/deviceSettingsFragment" />
        <action
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            android:id="@+id/action_dashboardFragment_to_supportFragment"
            app:destination="@id/supportFragment" />
    </fragment>

    <action
        android:id="@+id/actionInternetConnectionFragment"
        app:destination="@id/noInternetConnectionFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
    <fragment
        android:id="@+id/noInternetConnectionFragment"
        android:name="com.ome.app.ui.internet_error.NoInternetConnectionFragment"
        android:label="NoInternetConnectionFragment" />

    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.ome.app.ui.dashboard.profile.change_password.ChangePasswordFragment"
        android:label="ChangePasswordFragment"
        tools:layout="@layout/fragment_change_password"  />

    <fragment
        android:id="@+id/autoShutOffSettingsFragment"
        android:name="com.ome.app.ui.dashboard.settings.auto_shutoff.AutoShutOffSettingsFragment"
        android:label="AutoShutOffSettingsFragment"
        tools:layout="@layout/fragment_auto_shut_off_settings"  />

    <fragment
        android:id="@+id/deviceSettingsFragment"
        android:name="com.ome.app.ui.dashboard.settings.device.DeviceSettingsFragment"
        android:label="AutoShutOffSettingsFragment"
        tools:layout="@layout/fragment_device_settings" >
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.dashboard.settings.device.DeviceSettingsFragmentParams" />
    </fragment>

    <fragment
        android:id="@+id/supportFragment"
        android:name="com.ome.app.ui.dashboard.settings.support.SupportFragment"
        android:label="SupportFragment"
        tools:layout="@layout/fragment_support"/>


</navigation>
