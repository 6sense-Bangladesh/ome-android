<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="false">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="86dp"
        android:src="@drawable/ic_setup_stove"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/gasIv"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/stove_type_button_shape"
        android:padding="25dp"
        android:src="@drawable/ic_gray_gas"
        app:layout_constraintEnd_toStartOf="@+id/electricIv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        style="@style/Label.17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/electric"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/electricIv"
        app:layout_constraintStart_toStartOf="@+id/electricIv"
        app:layout_constraintTop_toBottomOf="@+id/electricIv" />

    <TextView
        style="@style/Label.17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/gas"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/gasIv"
        app:layout_constraintStart_toStartOf="@+id/gasIv"
        app:layout_constraintTop_toBottomOf="@+id/gasIv" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/electricIv"
        android:layout_width="135dp"
        android:layout_height="125dp"
        android:background="@drawable/stove_type_button_shape"
        android:padding="25dp"
        android:src="@drawable/ic_gray_electric"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gasIv"
        app:layout_constraintTop_toTopOf="@+id/gasIv" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continueBtn"
        style="@style/OmeButton.Gradient"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/ome_gradient_button_pressed_color"
        android:enabled="false"
        android:text="@string/continue_btn"
        app:layout_constraintEnd_toEndOf="@+id/electricIv"
        app:layout_constraintStart_toStartOf="@+id/gasIv"
        app:layout_constraintTop_toBottomOf="@+id/electricIv" />


</androidx.constraintlayout.widget.ConstraintLayout>
