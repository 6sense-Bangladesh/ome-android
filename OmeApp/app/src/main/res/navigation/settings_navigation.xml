<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsNavigation"
    app:startDestination="@id/settingsFragment">


    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ome.app.ui.dashboard.settings.SettingsFragment"
        android:label="SettingsFragment">
        <action
            android:id="@+id/action_settingsFragment_to_supportFragment"
            app:destination="@id/supportFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_autoShutOffSettingsFragment"
            app:destination="@id/autoShutOffSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_stoveInfoFragment"
            app:destination="@id/stoveInfoFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_deviceSettingsFragment"
            app:destination="@id/deviceSettingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_settingsFragment_to_knobWakeUpFragment"
            app:destination="@id/knobWakeUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/supportFragment"
        android:name="com.ome.app.ui.dashboard.settings.support.SupportFragment"
        android:label="SupportFragment" />
    <fragment
        android:id="@+id/autoShutOffSettingsFragment"
        android:name="com.ome.app.ui.dashboard.settings.auto_shutoff.AutoShutOffSettingsFragment"
        android:label="AutoShutOffSettingsFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right">
        <argument
            android:name="params"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/stoveInfoFragment"
        android:name="com.ome.app.ui.dashboard.settings.stove_info.StoveInfoFragment"
        android:label="StoveInfoFragment">
        <argument
            android:name="params"
            app:argType="string" />
        <action
            android:id="@+id/action_stoveInfoFragment_to_stoveSetupTypeFragment"
            app:destination="@id/stoveSetupTypeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_stoveInfoFragment_to_stoveSetupBurnersFragment"
            app:destination="@id/stoveSetupBurnersFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/stoveSetupTypeFragment"
        android:name="com.ome.app.ui.stove.StoveSetupTypeFragment"
        android:label="StoveSetupTypeFragment">
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.stove.StoveSetupTypeArgs" />
    </fragment>


    <fragment
        android:id="@+id/stoveSetupBurnersFragment"
        android:name="com.ome.app.ui.stove.StoveSetupBurnersFragment"
        android:label="StoveSetupBurnersFragment">
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.stove.StoveSetupBurnersArgs" />
    </fragment>
    <fragment
        android:id="@+id/deviceSettingsFragment"
        android:name="com.ome.app.ui.dashboard.settings.device.DeviceSettingsFragment"
        android:label="DeviceSettingsFragment">
        <argument
            android:name="params"
            app:argType="com.ome.app.ui.dashboard.settings.device.DeviceSettingsFragmentParams" />
    </fragment>
    <fragment
        android:id="@+id/knobWakeUpFragment"
        android:name="com.ome.app.ui.dashboard.settings.add_knob.wake_up.KnobWakeUpFragment"
        android:label="KnobWakeUpFragment">
        <action
            android:id="@+id/action_knobWakeUpFragment_to_metalPlateInstallationFragment"
            app:destination="@id/metalPlateInstallationFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/metalPlateInstallationFragment"
        android:name="com.ome.app.ui.dashboard.settings.add_knob.metal_plate.MetalPlateInstallationFragment"
        android:label="MetalPlateInstallationFragment">
        <action
            android:id="@+id/action_metalPlateInstallationFragment_to_selectBurnerFragment"
            app:destination="@id/selectBurnerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/selectBurnerFragment"
        android:name="com.ome.app.ui.dashboard.settings.add_knob.burner.SelectBurnerFragment"
        android:label="SelectBurnerFragment">
        <action
            android:id="@+id/action_selectBurnerFragment_to_qrCodeScannerFragment"
            app:destination="@id/qrCodeScannerFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/qrCodeScannerFragment"
        android:name="com.ome.app.ui.dashboard.settings.add_knob.scanner.QrCodeScannerFragment"
        android:label="QrCodeScannerFragment" >

        <argument
            android:name="params"
            app:argType="com.ome.app.ui.dashboard.settings.add_knob.scanner.QrCodeScannerParams"/>
    </fragment>
</navigation>
